generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id Int @id @default(autoincrement())

  fullName String   @unique
  email    String   @unique
  password String
  role     UserRole @default(USER)

  privider String?
  prividerId String?

  worldProfile WorldProfile?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WorldProfile {
  id Int @id @default(autoincrement())

  user   User? @relation(fields: [userId], references: [id])
  userId Int?  @unique

  token String

  totalTrips Int    @default(0)
  trips      Trip[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Region {
  id Int @id @default(autoincrement())

  name String

  countries Country[]
}

model Country {
  id Int @id @default(autoincrement())

  name String
  code String @unique

  trips Trip[]

  region   Region @relation(fields: [regionId], references: [id])
  regionId Int
}

model Trip {
  id Int @id @default(autoincrement())

  startedTripAt DateTime
  endTripAt     DateTime
  cities        String[]

  country        Country      @relation(fields: [countryId], references: [id])
  countryId      Int
  worldProfile   WorldProfile @relation(fields: [worldProfileId], references: [id])
  worldProfileId Int
}

enum UserRole {
  USER
  ADMIN
}
