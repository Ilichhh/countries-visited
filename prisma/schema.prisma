generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id Int @id @default(autoincrement())

  fullName  String
  email     String   @unique
  username  String   @unique
  password  String?
  avatarUrl String?
  bio       String?
  role      UserRole @default(USER)

  provider   String?
  providerId String?

  residentCountry      Country? @relation("ResidentCountry", fields: [countryOfResidenceId], references: [cca2])
  countryOfResidenceId String?

  visitedCountries Country[] @relation("VisitedCountries")
  trips            Trip[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Country {
  cca2    String  @id
  name    String
  region  String
  flagUrl String?

  visitingUsers User[] @relation("VisitedCountries")
  residents     User[] @relation("ResidentCountry")
  trips         Trip[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Trip {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  country   Country @relation(fields: [countryId], references: [cca2])
  countryId String

  startDate DateTime?
  endDate   DateTime?

  photos Photo[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Photo {
  id          Int     @id @default(autoincrement())
  url         String
  description String?

  trip   Trip @relation(fields: [tripId], references: [id])
  tripId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
