generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id Int @id @default(autoincrement())

  fullName   String
  email      String   @unique
  password   String?
  avatarUrl  String?
  uniqueLink String   @unique
  role       UserRole @default(USER)

  provider   String?
  providerId String?

  countryOfResidence String?
  currentCountry     String?

  visitedCountriesCount Int @default(0)
  totalTravelDays       Int @default(0)

  trips  Trip[]
  photos Photo[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Trip {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  countryName String
  countryCode String

  startDate DateTime?
  endDate   DateTime?

  photos Photo[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Photo {
  id          Int     @id @default(autoincrement())
  url         String
  description String?

  trip   Trip @relation(fields: [tripId], references: [id])
  tripId Int

  user   User @relation(fields: [userId], references: [id])
  userId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
